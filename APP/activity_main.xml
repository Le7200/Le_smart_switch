            android:layout_toLeftOf="@+id/button8"
            android:layout_toRightOf="@+id/button7"
            android:text="未知" />

        <TextView
            android:id="@+id/textView6"
            android:gravity="center"
            android:textSize="30px"
            android:textColor="#aa0000"
